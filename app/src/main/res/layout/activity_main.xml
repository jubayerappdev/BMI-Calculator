<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#051E1E"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI Calculator"
        android:layout_marginTop="20dp"
        android:textColor="#AD8FE1"
        android:textSize="45sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold">
        
    </TextView>

    <LinearLayout
        android:id="@+id/text2"
        android:layout_below="@id/text1"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textSize="30sp"
            android:textColor="@color/white">

        </TextView>
        <EditText
            android:id="@+id/editWgt"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:background="@color/white"
            android:inputType="numberDecimal"
            android:textSize="25sp"
            android:hint="KG"
            android:gravity="center"
            android:layout_marginLeft="80dp">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/text3"

        android:layout_below="@id/text2"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textSize="30sp"
            android:textColor="@color/white">

        </TextView>
        <EditText
            android:id="@+id/editHgt"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:background="@color/white"
            android:inputType="numberDecimal"
            android:textSize="25sp"
            android:hint="CM"
            android:gravity="center"
            android:layout_marginLeft="80dp">

        </EditText>
    </LinearLayout>
    <Button
        android:layout_below="@id/text3"
        android:layout_centerHorizontal="true"
        android:text="Result"
        android:id="@+id/RsltBtn"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp">

    </Button>
     <TextView
         android:id="@+id/textInter"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/RsltBtn"
         android:hint="Enter Your Detail?"
         android:textSize="25sp"
         android:layout_centerHorizontal="true"
         android:textColor="@color/white"
         android:layout_marginTop="25dp"
         android:textStyle="bold"/>


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textInter"
        android:id="@+id/textRes"
        android:hint="BMI = ?"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:textStyle="bold"/>
    <Button
        android:layout_below="@id/textRes"
        android:layout_centerHorizontal="true"
        android:text="Reset"
        android:id="@+id/RstBtn"

        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:layout_width="120dp"
        android:layout_height="60dp">

    </Button>



</RelativeLayout>